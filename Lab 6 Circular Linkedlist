Task 1:
#include <iostream>
using namespace std;

struct Node {
    int marks;
    Node* prev;
    Node* next;
};

Node* head = NULL;

void createList(int marks) {
    Node* newNode = new Node();
    newNode->marks = marks;

    if (head == NULL) {
        head = newNode;
        head->next = head;
        head->prev = head;
    } else {
        Node* last = head->prev;
        last->next = newNode;
        newNode->prev = last;
        newNode->next = head;
        head->prev = newNode;
    }
}

void display() {
    if (head == NULL) {
        cout << "List is empty!\n";
        return;
    }

    Node* temp = head;
    cout << "List: ";
    do {
        cout << temp->marks << " ";
        temp = temp->next;
    } while (temp != head);
    cout << endl;
}

void addAtBeginning(int value) {
    Node* newNode = new Node();
    newNode->marks = value;

    if (head == NULL) {
        head = newNode;
        head->next = head;
        head->prev = head;
        return;
    }

    Node* last = head->prev;
    newNode->next = head;
    newNode->prev = last;
    last->next = newNode;
    head->prev = newNode;
    head = newNode;
}

void addAfter45(int value) {
    if (head == NULL) {
        cout << "List is empty! Cannot add after 45.\n";
        return;
    }

    Node* temp = head;
    do {
        if (temp->marks == 45) {
            Node* newNode = new Node();
            newNode->marks = value;

            newNode->next = temp->next;
            newNode->prev = temp;
            temp->next->prev = newNode;
            temp->next = newNode;

            return;
        }
        temp = temp->next;
    } while (temp != head);

    cout << "Value 45 not found!\n";
}

void deleteAtBeginning() {
    if (head == NULL) {
        cout << "List is empty! Cannot delete.\n";
        return;
    }

    if (head->next == head) {  // Only one node
        delete head;
        head = NULL;
        return;
    }

    Node* last = head->prev;
    Node* temp = head;
    head = head->next;
    head->prev = last;
    last->next = head;
    delete temp;
}

void deleteAfter45() {
    if (head == NULL) {
        cout << "List is empty! Cannot delete after 45.\n";
        return;
    }

    Node* temp = head;
    do {
        if (temp->marks == 45) {
            Node* delNode = temp->next;

            if (delNode == head) {
                cout << "No node found after 45!\n";
                return;
            }

            temp->next = delNode->next;
            delNode->next->prev = temp;
            delete delNode;
            return;
        }
        temp = temp->next;
    } while (temp != head);

    cout << "Value 45 not found!\n";
}

int main() {
    int n, value;
    cout << "Enter number of nodes: ";
    cin >> n;

    cout << "Enter marks:\n";
    for (int i = 0; i < n; i++) {
        cin >> value;
        createList(value);
    }

    display();

    cout << "\nAdd at beginning (enter value): ";
    cin >> value;
    addAtBeginning(value);
    display();

    cout << "\nAdd after 45 (enter value): ";
    cin >> value;
    addAfter45(value);
    display();

    cout << "\nDeleting at beginning...\n";
    deleteAtBeginning();
    display();

    cout << "\nDeleting after 45...\n";
    deleteAfter45();
    display();

    return 0;
}
Task 2 :
#include <iostream>
using namespace std;

struct Node {
    float rainfall;
    Node* prev;
    Node* next;
};

int main() {
    Node* head = NULL;
    Node* tail = NULL;
    float total = 0;
    int days = 7;

   
    for (int i = 1; i <= days; i++) {
        float rain;
        do {
            cout << "Enter rainfall for day " << i << ": ";
            cin >> rain;
            if (rain < 0)
                cout << "Invalid! Rainfall cannot be negative.\n";
        } while (rain < 0);

        Node* newNode = new Node;
        newNode->rainfall = rain;
        newNode->next = newNode->prev = NULL;

        if (head == NULL) {
            head = tail = newNode;
            // circular link for single node
            head->next = head;
            head->prev = head;
        } else {
       
            newNode->prev = tail;
            newNode->next = head; // circular link
            tail->next = newNode;
            head->prev = newNode;
            tail = newNode;
        }

        total += rain;
    }

    
    float avg = total / days;

   
    Node* temp = head;
    float highest = head->rainfall;
    float lowest = head->rainfall;
    int highDay = 1, lowDay = 1, day = 1;

    
    do {
        if (temp->rainfall > highest) {
            highest = temp->rainfall;
            highDay = day;
        }
        if (temp->rainfall < lowest) {
            lowest = temp->rainfall;
            lowDay = day;
        }
        temp = temp->next;
        day++;
    } while (temp != head);

   
    cout << "\nTotal rainfall for the week: " << total << endl;
    cout << "Average weekly rainfall: " << avg << endl;
    cout << "Day with highest rainfall: Day " << highDay << " (" << highest << ")" << endl;
    cout << "Day with lowest rainfall: Day " << lowDay << " (" << lowest << ")" << endl;


    Node* ptr = head;
    for (int i = 1; i < 6; i++)
        ptr = ptr->next; 

    cout << "Rainfall of the day after 5th node (Day 6): " << ptr->rainfall << endl;

    return 0;
}
