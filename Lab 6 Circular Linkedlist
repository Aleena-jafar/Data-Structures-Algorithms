#include <iostream>
using namespace std;

struct Node {
    int marks;
    Node* prev;
    Node* next;
};

Node* head = NULL;

void createList(int marks) {
    Node* newNode = new Node();
    newNode->marks = marks;

    if (head == NULL) {
        head = newNode;
        head->next = head;
        head->prev = head;
    } else {
        Node* last = head->prev;
        last->next = newNode;
        newNode->prev = last;
        newNode->next = head;
        head->prev = newNode;
    }
}

void display() {
    if (head == NULL) {
        cout << "List is empty!\n";
        return;
    }

    Node* temp = head;
    cout << "List: ";
    do {
        cout << temp->marks << " ";
        temp = temp->next;
    } while (temp != head);
    cout << endl;
}

void addAtBeginning(int value) {
    Node* newNode = new Node();
    newNode->marks = value;

    if (head == NULL) {
        head = newNode;
        head->next = head;
        head->prev = head;
        return;
    }

    Node* last = head->prev;
    newNode->next = head;
    newNode->prev = last;
    last->next = newNode;
    head->prev = newNode;
    head = newNode;
}

void addAfter45(int value) {
    if (head == NULL) {
        cout << "List is empty! Cannot add after 45.\n";
        return;
    }

    Node* temp = head;
    do {
        if (temp->marks == 45) {
            Node* newNode = new Node();
            newNode->marks = value;

            newNode->next = temp->next;
            newNode->prev = temp;
            temp->next->prev = newNode;
            temp->next = newNode;

            return;
        }
        temp = temp->next;
    } while (temp != head);

    cout << "Value 45 not found!\n";
}

void deleteAtBeginning() {
    if (head == NULL) {
        cout << "List is empty! Cannot delete.\n";
        return;
    }

    if (head->next == head) {  // Only one node
        delete head;
        head = NULL;
        return;
    }

    Node* last = head->prev;
    Node* temp = head;
    head = head->next;
    head->prev = last;
    last->next = head;
    delete temp;
}

void deleteAfter45() {
    if (head == NULL) {
        cout << "List is empty! Cannot delete after 45.\n";
        return;
    }

    Node* temp = head;
    do {
        if (temp->marks == 45) {
            Node* delNode = temp->next;

            if (delNode == head) {
                cout << "No node found after 45!\n";
                return;
            }

            temp->next = delNode->next;
            delNode->next->prev = temp;
            delete delNode;
            return;
        }
        temp = temp->next;
    } while (temp != head);

    cout << "Value 45 not found!\n";
}

int main() {
    int n, value;
    cout << "Enter number of nodes: ";
    cin >> n;

    cout << "Enter marks:\n";
    for (int i = 0; i < n; i++) {
        cin >> value;
        createList(value);
    }

    display();

    cout << "\nAdd at beginning (enter value): ";
    cin >> value;
    addAtBeginning(value);
    display();

    cout << "\nAdd after 45 (enter value): ";
    cin >> value;
    addAfter45(value);
    display();

    cout << "\nDeleting at beginning...\n";
    deleteAtBeginning();
    display();

    cout << "\nDeleting after 45...\n";
    deleteAfter45();
    display();

    return 0;
}
